<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Chat" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkLabel">
        <property name="label">Chat</property>
      </object>
    </child>
    <child>
      <object class="GtkListBox" id="message_list">
        <property name="vexpand">true</property>
        <property name="selection-mode">none</property>
        <child>
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="label">Mensaje externo</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label">Mensaje propio</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkEntry">
        <property name="placeholder-text">Write a message here</property>
        <signal name="activate" handler="send_message" swapped="true" />
      </object>
    </child>
  </template>
</interface>
