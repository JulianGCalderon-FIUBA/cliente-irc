<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Chat" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="ChatHeader" id="header">
        <property name="chat-name" bind-source="Chat" />
        <signal name="close-request" handler="emit_close_request" swapped="true" />
      </object>
    </child>
    <child>
      <object class="GtkListBox" id="message_list">
        <property name="vexpand">true</property>
        <property name="selection-mode">none</property>
      </object>
    </child>
    <child>
      <object class="GtkEntry" id="message_entry">
        <property name="placeholder-text">Write a message here</property>
        <property name="secondary-icon-name">mail-send-symbolic</property>
        <property name="margin-start">6</property>
        <property name="margin-top">6</property>
        <property name="hexpand">true</property>
        <property name="margin-bottom">6</property>
        <property name="margin-end">6</property>
        <property name="height-request">40</property>
        <signal name="activate" handler="emit_send_message_request" swapped="true" />
        <signal name="icon-release" handler="emit_send_message_request" swapped="true" />
      </object>
    </child>
  </template>
</interface>
